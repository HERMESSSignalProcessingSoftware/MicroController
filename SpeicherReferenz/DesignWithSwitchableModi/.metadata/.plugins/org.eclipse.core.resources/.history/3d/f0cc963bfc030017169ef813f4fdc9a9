#ifndef _INCLUDED_FACETANDVISIONCONFIGURATION_H_
#define _INCLUDED_FACETANDVISIONCONFIGURATION_H_

#define FACETANDVISION_CONFIGURATION_MOD      0 //00 => one Sensor 8 bit
                                                //01 => two sensors 10 bit
                                                //02 => 4 sensors 8 bit

#define FACETANDVISION_GPIF2_INTERFACE_WIDTH 8




#if FACETANDVISION_CONFIGURATION_MOD == 0
#define FACETANDVISION_SONY_X_RESOLUTION 1052
#define FACETANDVISION_SONY_Y_RESOLUTION 780
#define FACETANDVISION_SONY_HORIZONTAL_CONTAINER_SIZE 5008
#define FACETANDVISION_SONY_VERTICAL_CONTAINER_SIZE   1600//800
#define FACETANDVISION_GPIF_IMAGE_X_SIZE (FACETANDVISION_SONY_X_RESOLUTION)
#define FACETANDVISION_GPIF_IMAGE_Y_SIZE (FACETANDVISION_SONY_Y_RESOLUTION)
#define FACETANDVISION_SONY_BINNING       2
#elif FACETANDVISION_CONFIGURATION_MOD == 1
#define FACETANDVISION_SONY_X_RESOLUTION 4208
#define FACETANDVISION_SONY_Y_RESOLUTION 3120
#define FACETANDVISION_SONY_HORIZONTAL_CONTAINER_SIZE 5008
#define FACETANDVISION_SONY_VERTICAL_CONTAINER_SIZE   3160
#define FACETANDVISION_GPIF_IMAGE_X_SIZE (FACETANDVISION_SONY_X_RESOLUTION*2)
#define FACETANDVISION_GPIF_IMAGE_Y_SIZE (FACETANDVISION_SONY_Y_RESOLUTION)
#define FACETANDVISION_SONY_BINNING       0
#else
#define FACETANDVISION_SONY_X_RESOLUTION 2104
#define FACETANDVISION_SONY_Y_RESOLUTION 1560
#define FACETANDVISION_SONY_HORIZONTAL_CONTAINER_SIZE 5008
#define FACETANDVISION_SONY_VERTICAL_CONTAINER_SIZE   1600
#define FACETANDVISION_GPIF_IMAGE_X_SIZE (FACETANDVISION_SONY_X_RESOLUTION*4)
#define FACETANDVISION_GPIF_IMAGE_Y_SIZE (FACETANDVISION_SONY_Y_RESOLUTION)
#define FACETANDVISION_SONY_BINNING       1
#endif

#if FACETANDVISION_GPIF2_INTERFACE_WIDTH == 8
#define FACETANDVISION_USB_OUTPUT_WIDTH   (FACETANDVISION_GPIF_IMAGE_X_SIZE/2)
#define FACETANDVISION_USB_OUTPUT_HIGH    (FACETANDVISION_GPIF_IMAGE_Y_SIZE)
#elif FACETANDVISION_GPIF2_INTERFACE_WIDTH == 16
#define FACETANDVISION_USB_OUTPUT_WIDTH   (FACETANDVISION_GPIF_IMAGE_X_SIZE)
#define FACETANDVISION_USB_OUTPUT_HIGH    (FACETANDVISION_GPIF_IMAGE_Y_SIZE)
#else
#define FACETANDVISION_USB_OUTPUT_WIDTH   (FACETANDVISION_GPIF_IMAGE_X_SIZE*2)
#define FACETANDVISION_USB_OUTPUT_HIGH    (FACETANDVISION_GPIF_IMAGE_Y_SIZE)
#endif


#if FACETANDVISION_SONY_BINNING == 1
  #define FACETANDVISION_SONY_WEIGHTING   2
  #define FACETANDVISION_SONY_X_RIGHT_CORNER_PIXEL    (2*FACETANDVISION_SONY_X_RESOLUTION - 1)
  #define FACETANDVISION_SONY_Y_RIGHT_CORNER_PIXEL    (2*FACETANDVISION_SONY_Y_RESOLUTION - 1)
#elif FACETANDVISION_SONY_BINNING == 2
  #define FACETANDVISION_SONY_WEIGHTING   2
  #define FACETANDVISION_SONY_X_RIGHT_CORNER_PIXEL    (4*FACETANDVISION_SONY_X_RESOLUTION - 1)
  #define FACETANDVISION_SONY_Y_RIGHT_CORNER_PIXEL    (4*FACETANDVISION_SONY_Y_RESOLUTION - 1)
#else
    #define FACETANDVISION_SONY_WEIGHTING   0
    #define FACETANDVISION_SONY_X_RIGHT_CORNER_PIXEL    (FACETANDVISION_SONY_X_RESOLUTION - 1)
    #define FACETANDVISION_SONY_Y_RIGHT_CORNER_PIXEL    (FACETANDVISION_SONY_Y_RESOLUTION - 1)
#endif
#define FACETANDVISION_I2C_CONFIGURATION 1
#define SENSOR_RESET_GPIO 22


#endif
